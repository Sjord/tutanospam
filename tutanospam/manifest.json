{
    "version": "0.0.7",
    "manifest_version": 3,
    "name": "TutaNoSpam",
    "description": "Spam filter for Tutanota",
    "content_scripts": [
        {
            "matches": [
                "https://mail.tutanota.com/*",
                "https://app.tuta.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [],
    "host_permissions": [
        "https://mail.tutanota.com/*",
        "https://app.tuta.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": ["page.js"],
            "matches": ["https://mail.tutanota.com/*", "https://app.tuta.com/*"]
        }
    ]
}
