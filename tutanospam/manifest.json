{
    "version": "0.0.3",
    "manifest_version": 2,
    "name": "TutaNoSpam",
    "description": "Spam filter for Tutanota",
    "content_scripts": [
        {
            "matches": [
                "https://mail.tutanota.com/*",
                "https://app.tuta.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
    ],
    "web_accessible_resources": [
        "page.js"
    ]
}
